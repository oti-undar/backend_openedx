model EjecucionExamen {
    id           String                      @id @default(uuid())
    alumno_id    String
    examen_id    String
    examen       Examen                      @relation(fields: [examen_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
    respuestas   RespuestasEjecucionExamen[]
    final_examen DateTime?

    created_at DateTime  @default(now())
    updated_at DateTime  @updatedAt
    deleted_at DateTime?
}

model RespuestasEjecucionExamen {
    id                  String          @id @default(uuid())
    ejecucion_examen_id String
    pregunta_id         Int
    respuesta_id        Int
    ejecucion_examen    EjecucionExamen @relation(fields: [ejecucion_examen_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
    pregunta            Pregunta        @relation(fields: [pregunta_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
    respuesta           Respuesta       @relation(fields: [respuesta_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

    created_at DateTime  @default(now())
    updated_at DateTime  @updatedAt
    deleted_at DateTime?
}

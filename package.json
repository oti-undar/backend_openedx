{
  "name": "my-app",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "migrate:fresh": "(if exist prisma\\migrations (rmdir /s /q prisma\\migrations)) && npx prisma migrate reset --force && npx prisma migrate dev --name init && npm run seed",
    "migrate:fresh:linux": "rm -rf prisma/migrations && npx prisma migrate reset --force && npx prisma migrate dev --name init && npm run seed",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/zod-openapi": "^0.19.6",
    "@prisma/client": "^6.7.0",
    "@types/qs": "^6.14.0",
    "@types/uuid": "^10.0.0",
    "cuid": "^3.0.0",
    "date-fns": "^4.1.0",
    "hono": "^4.7.9",
    "qs": "^6.14.0",
    "socket.io": "^4.8.1",
    "tsx": "^4.7.1",
    "uuid": "^11.1.0",
    "zod-prisma-types": "^3.2.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "prisma": "^6.7.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "schema": "./prisma"
  }
}
